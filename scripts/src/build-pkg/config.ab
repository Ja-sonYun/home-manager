pub fun get_root_dir(): Text {
    let script_dir = trust $ cd "\$(dirname "\$0")" && pwd $
    let root = trust $ cd "{script_dir}/.." && pwd $
    return root
}

pub fun get_hashfile_path(root_dir: Text): Text {
    return "{root_dir}/pkgs/hashfile.json"
}

pub fun get_hostname(): Text {
    let h = trust $ hostname $
    return h
}
